{{#if before}}
  {{#if fieldObj.hasError}}
    {{yield}}
  {{/if}}
{{/if}}

<select id="{{_id}}" class="{{_class}}" multiple>
  {{#each fieldObj.choices as |choice|}}
    <option value="{{choice}}">{{choice}}</option>
  {{/each}}
</select>

{{#if after}}
  {{#if fieldObj.hasError}}
    {{yield}}
  {{/if}}
{{/if}}
